// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Buyer {
  username String     @id @default(cuid())
  password String
  balance  Int        @default(1000000)
  name     String?
  location String
  Purchase Purchase[]
}

model Book {
  isbn         String     @id
  title        String
  bookSeller   Seller     @relation(fields: [seller], references: [username])
  seller       String
  author       String?
  publisher    String?
  publish_year Int?
  genre        String?
  price        Int
  quantity     Int
  Purchase     Purchase[]
}

model Seller {
  username String  @id
  password String
  name     String?

  Purchase Purchase[]
  Book     Book[]
}

model Purchase {
  id            String @id @default(cuid())
  purchasedBook Book   @relation(fields: [isbn], references: [isbn])
  isbn          String

  purchaseSeller Seller @relation(fields: [seller], references: [username])
  seller         String

  purchaseBuyer Buyer  @relation(fields: [buyer], references: [username])
  buyer         String

  year String
}
